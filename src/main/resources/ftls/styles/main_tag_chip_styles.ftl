/* CHIP DATA */

.tagname {
    line-height: 1.2;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.tagchip {
    display: inline-flex;
    vertical-align: top;
    -webkit-box-align: center;
    align-items: center;
    max-width: 100%;
    font-weight: 500;
    line-height: 0.75rem;
    outline: 0px;
    /*min-height: 1.25rem;*/
    /*min-width: 1.25rem;*/
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    letter-spacing: 0.025rem;
    text-transform: uppercase;
    color: rgb(240, 25, 0);
    background: rgb(255, 232, 229);
    /* color: black;
    background: rgb(201, 200, 200); */
    /* color: rgb(0, 190, 170);
    background: rgb(235, 254, 252); */
}
